<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40532A"
    tools:context=".MainActivityLogin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En Sevdiğin Kitaplar için Bir Liste Oluştur"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="610dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoşgeldiniz!"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="575dp"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/login_panel"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/loginpageback">

        <EditText
            android:id="@+id/editTestPsw"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="190dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            android:textSize="18sp"
            android:background="@drawable/edittextback"
            android:drawableLeft="@drawable/baseline_vpn_key_24"/>

        <EditText
            android:id="@+id/editTestUser"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="124dp"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/edittextback"
            android:drawableLeft="@drawable/baseline_person_24"/>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="275dp"
            android:backgroundTint="#40532A"
            android:text="Log In"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="325dp"
            android:backgroundTint="#40532A"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="16sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="401dp"
        android:layout_height="350dp"

        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/login_img" />
</RelativeLayout>