<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#858F57"
    tools:context=".AddBookFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImageView"
                android:layout_width="240dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="onBookImageClicked"
                android:src="@drawable/addbook_img" />

            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#40532A"
                android:text="Select Your Book Image"
                android:textAllCaps="false"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/bookName"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Book Name"
                android:textAlignment="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/bookWriter"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:hint="Book Writer"
                android:textAlignment="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/bookSummary"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="Book Summary"
                android:textAlignment="center"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#40532A"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
